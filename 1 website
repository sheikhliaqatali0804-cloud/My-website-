  <script>
    // ====== JavaScript (Interactions) ======

    // Mobile menu toggle
    const burgerBtn = document.getElementById('burgerBtn');
    const menuLinks = document.getElementById('menuLinks');
    burgerBtn.addEventListener('click', () => {
      menuLinks.classList.toggle('open');
    });

    // Active link highlight on scroll
    const sections = document.querySelectorAll('main section[id]');
    const navLinks = document.querySelectorAll('.menu a[href^="#"]');

    const setActiveLink = () => {
      let current = '';
      sections.forEach(sec => {
        const top = window.scrollY + 120; // offset for sticky navbar
        if (top >= sec.offsetTop && top < sec.offsetTop + sec.offsetHeight) {
          current = '#' + sec.id;
        }
      });
      navLinks.forEach(a => {
        a.classList.toggle('active', a.getAttribute('href') === current);
      });
    };
    window.addEventListener('scroll', setActiveLink);
    window.addEventListener('load', setActiveLink);

    // Button: say hello
    document.getElementById('sayHelloBtn').addEventListener('click', () => {
      alert('MashAllah! Aap ne button click kiya ðŸŽ‰');
    });

    // Dark / Light theme toggle
    const toggleBtn = document.getElementById('toggleThemeBtn');
    let dark = false;
    toggleBtn.addEventListener('click', () => {
      dark = !dark;
      if(dark){
        document.documentElement.style.setProperty('--bg', '#0f172a');
        document.documentElement.style.setProperty('--card', '#111827');
        document.documentElement.style.setProperty('--text', '#e5e7eb');
        document.documentElement.style.setProperty('--primary', '#2563eb');
        document.documentElement.style.setProperty('--primary-hover', '#16a34a');
      } else {
        document.documentElement.style.setProperty('--bg', '#f0f0f0');
        document.documentElement.style.setProperty('--card', '#ffffff');
        document.documentElement.style.setProperty('--text', '#333333');
        document.documentElement.style.setProperty('--primary', '#0a3d91');
        document.documentElement.style.setProperty('--primary-hover', '#0d6b3c');
      }
    });

    // Demo contact form (no backend) â€“ prevent real submit
    const form = document.getElementById('contactForm');
    const statusEl = document.getElementById('formStatus');
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());
      statusEl.textContent = `Shukriya, ${data.name}! Aap ka message receive ho gaya (demo).`;
      form.reset();
    });

    // Year in footer
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
